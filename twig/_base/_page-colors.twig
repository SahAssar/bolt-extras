{% set colors = app.config.get('general/branding/colors')%}

{% if colors %}
<style>
#navpage-primary {
    background-color: {{colors.primary}};
    background-image: none;
    color: {{colors.secondary}};
    border:none;
}

.navbar-static-top .nav>li>a, .navbar-header * {
    color: {{colors.secondary}} !important;
}

.intenditWelcome a,
.navbar-header2 a,
.navbar-static-top .nav>li:hover>a,
.navbar-static-top .nav>li:focus {
    background: none;
    color: {{colors.text}};
    text-decoration: underline;
}

#navpage-secondary,
#navpage-wrapper.nav-secondary-collapsed #navpage-secondary,
#navpage-wrapper.nav-secondary-collapsed-hoverable #navpage-secondary:hover {
    background: {{colors.secondary}};
    box-shadow: none;
}

#navpage-secondary .nav>li>a,
#navpage-secondary .nav>li>form,
#navpage-secondary .nav>li>em,
#navpage-wrapper.nav-secondary-collapsed-hoverable #navpage-secondary:hover .nav>li a {
    color: {{colors.text}};
}

#navpage-secondary .nav>li {
    background-color: {{colors.secondary}};
    color: {{colors.text}};
}

#navpage-secondary .nav>li i.icon,
.nav-secondary-collapse i.icon,
.nav-secondary-expand i.icon {
    color: {{colors.text}} !important;
}

#navpage-wrapper.nav-secondary-collapsed #navpage-secondary {
    width: 40px;
}

#navpage-secondary .nav>li.active,
#navpage-secondary .nav>li.active>a,
#navpage-secondary .nav>li.active>form,
#navpage-secondary .nav>li.active>em,
#navpage-wrapper.nav-secondary-collapsed-hoverable #navpage-secondary .nav>li:hover>a,
#navpage-wrapper.nav-secondary-collapsed-hoverable #navpage-secondary .nav>li>a:hover,
#navpage-secondary .nav>li:hover>a,
#navpage-secondary .nav>li a:focus,
#navpage-wrapper.nav-secondary-collapsed #navpage-secondary .nav>li.active>a {
    background-color: {{colors.primary}};
    color: {{colors.secondary}};
}

#navpage-secondary .nav>li.divider,
.nav-secondary-collapse, .nav-secondary-expand{
    border-top:0;
    margin-top:0;

}
#navpage-secondary .nav>li.divider{
    border-bottom: 2px solid {{colors.primary}};
}
.nav-secondary-collapse, .nav-secondary-expand{
    border-top: 2px solid {{colors.primary}};
}

@media (max-width: 768px) {
    #navpage-secondary {
        background: {{colors.secondary}};
    }
    #navpage-secondary .nav>li>a,
    #navpage-secondary .nav>li>form,
    #navpage-secondary .nav>li>em {
        color: {{colors.text}};
    }
    #navpage-secondary .nav>li:hover>a{
        background: {{colors.primary}};
        color: {{colors.secondary}};
    }
    .navbar-toggle, .navbar-toggle i, .navbar-toggle:hover, .navbar-toggle:focus {
        background-color:{{colors.secondary}};
        color: {{colors.text}} !important;
    }
}
</style>
{% endif %}